{
  "name": "@repo/storybook",
  "version": "0.0.5",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "storybook build",
    "test": "playwright test",
    "lint": "eslint stories/**/*.tsx components/**/*.tsx --max-warnings=0 && stylelint **/*.css --max-warnings=0 --allow-empty-input",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "serve-storybook": "http-server storybook-static -p 6006",
    "update-screenshots": "playwright test --update-snapshots",
    "test-docker": "docker-compose -f ../../docker-compose.e2e.yml up"
  },
  "dependencies": {
    "@giosg/design-system-foundations": "workspace:*",
    "@giosg/design-system-icons": "workspace:*",
    "@giosg/design-system-switch": "workspace:*",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/stylelint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-actions": "^7.6.12",
    "@storybook/addon-docs": "^7.6.12",
    "@storybook/addon-essentials": "^7.6.12",
    "@storybook/addon-links": "^7.6.12",
    "@storybook/addon-mdx-gfm": "^7.6.12",
    "@storybook/react": "^7.6.12",
    "@storybook/react-vite": "^7.6.12",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-mdx": "3.1.5",
    "eslint-plugin-storybook": "0.6.15",
    "http-server": "^14.1.1",
    "remark-gfm": "^3.0.1",
    "storybook": "^7.6.12",
    "stylelint": "^16.2.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2"
  }
}
