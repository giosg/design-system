{
  "name": "@repo/storybook",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "storybook dev -p 6006 --no-open",
    "build": "storybook build",
    "test": "playwright test --update-snapshots",
    "lint": "eslint stories/**/*.tsx components/**/*.tsx --max-warnings=0 && stylelint **/*.css --max-warnings=0 --allow-empty-input",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "serve-storybook": "http-server storybook-static -p 6006",
    "update-screenshots": "playwright test --update-snapshots",
    "test-docker": "docker-compose -f ../../docker-compose.e2e.yml up --build"
  },
  "dependencies": {
    "@giosg-design-system/foundations": "workspace:*",
    "@giosg-design-system/icons": "workspace:*",
    "@giosg-design-system/switch": "workspace:*",
    "@giosg-design-system/typography": "workspace:*",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/stylelint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-actions": "^8.0.9",
    "@storybook/addon-docs": "^8.0.9",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/addon-mdx-gfm": "^8.0.9",
    "@storybook/addon-storysource": "^8.0.9",
    "@storybook/react": "^8.0.9",
    "@storybook/react-vite": "^8.0.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-mdx": "3.1.5",
    "eslint-plugin-storybook": "^0.8.0",
    "http-server": "^14.1.1",
    "remark-gfm": "4.0.0",
    "storybook": "^8.0.9",
    "stylelint": "^16.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10"
  }
}
